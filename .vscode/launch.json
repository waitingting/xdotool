    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "lldb Launch",
            "program": "${workspaceFolder}/xdotool.static",
            "args": ["click", "3"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gdb Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/xdotool.static",
            "args": ["click", "3"],
            "environment": [],
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb"
          }
    ]
}